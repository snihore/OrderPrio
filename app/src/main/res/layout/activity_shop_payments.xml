<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopPaymentsActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/layout15"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:text="PAYMENTS"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout15"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/round_bg10"
        android:gravity="center">
        <EditText
            android:id="@+id/enter_upi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter UPI Account Name"
            android:text=""
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="monospace"
            android:inputType="textShortMessage"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/enter_upi_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter UPI ID"
            android:text=""
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_light"
            android:fontFamily="monospace"
            android:inputType="textShortMessage"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/save_upi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</RelativeLayout>